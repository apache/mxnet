        </profile>
        <profile>
          <id>linux-x86_64</id>
          <activation>
          <os>
            <family>unix</family>
            <name>Linux</name>
          </os>
          </activation>
          <properties>
            <mxnet.profile>linux-x86_64-cpu</mxnet.profile>
          </properties>
        </profile>
